<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalorieCounter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.CalorieCounter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.CalorieCounter.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.CalorieCounter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Custom.Container">

    </style>
    <style name="Custom" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colour_primary</item>
        <item name="colorPrimaryVariant">@color/colour_primary_variant</item>
        <item name="colorOnPrimary">@color/colour_on_primary</item>
        <item name="colorSurface">@color/colour_surface</item>

        <item name="colorSecondaryVariant">@color/colour_secondary_variant</item>
        <item name="colorSecondary">@color/colour_secondary</item>
        <item name="colorOnSecondary">@color/colour_on_secondary</item>
        <item name="colorOnSurface">@color/colour_on_surface</item>

        <item name="android:colorBackground">@color/colour_background</item>
        <item name="colorOnBackground">@color/colour_on_background</item>
        <item name="colorError">@color/colour_error</item>
        <item name="colorOnError">@color/colour_on_error</item>

        <item name="tint">@color/white_20</item>
        <item name="colorBackgroundFloating">@color/white_40</item>

        <item name="android:textColor">@color/white</item>

        <item name="android:textColorSecondary">@color/black</item>

    </style>

    <style name="CustomLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colour_primary_light</item>
        <item name="colorPrimaryVariant">@color/colour_primary_variant_light</item>
        <item name="colorOnPrimary">@color/colour_on_primary_light</item>
        <item name="colorSurface">@color/colour_surface_light</item>

        <item name="colorSecondaryVariant">@color/colour_secondary_variant_light</item>
        <item name="colorSecondary">@color/colour_secondary_light</item>
        <item name="colorOnSecondary">@color/colour_on_secondary_light</item>
        <item name="colorOnSurface">@color/colour_on_surface_light</item>

        <item name="android:colorBackground">@color/colour_background_light</item>
        <item name="colorOnBackground">@color/colour_on_background_light</item>
        <item name="colorError">@color/colour_error_light</item>
        <item name="colorOnError">@color/colour_on_error_light</item>

        <item name="tint">@color/black_20</item>
        <item name="colorBackgroundFloating">@color/black_40</item>

        <item name="android:textColor">@color/black</item>

        <item name="android:textColorSecondary">@color/black</item>

    </style>

    <style name="toolbar">
        <item name="tint">@color/black</item>
    </style>


</resources>