            <TextView
                android:id="@+id/date_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="day" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/water_decrease_water"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:background="@drawable/button_template"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/water_increase_water"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:background="@drawable/button_template"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/water_counter_water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NUM"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="@+id/water_decrease_water"
        app:layout_constraintEnd_toStartOf="@+id/water_increase_water"
        app:layout_constraintStart_toEndOf="@+id/water_decrease_water"
        app:layout_constraintTop_toTopOf="@+id/water_decrease_water" />

    <TextView
        android:id="@+id/water_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="(250ml)"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/water_counter_water"
        app:layout_constraintStart_toStartOf="@+id/water_counter_water"
        app:layout_constraintTop_toBottomOf="@+id/water_counter_water" />

